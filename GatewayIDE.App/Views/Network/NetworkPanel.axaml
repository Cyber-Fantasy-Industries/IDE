<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GatewayIDE.App.Views.Network.NetworkPanel">

  <Grid RowDefinitions="Auto,Auto,*,Auto"
        Background="#0f0f0f">

    <!-- ========================= -->
    <!-- TOP: CONNECT + HOST        -->
    <!-- ========================= -->
    <Grid Grid.Row="0"
          ColumnDefinitions="*,*"
          Margin="16,16,16,0">

      <!-- CONNECT (left) -->
      <Border Grid.Column="0"
              Margin="0,0,8,0"
              Background="#1b1e23"
              CornerRadius="10"
              Padding="16">
        <StackPanel Spacing="12">

          <TextBlock Text="Connect to Network"
                     FontSize="18"
                     FontWeight="Bold"/>

          <TextBlock Text="Paste invite code or network address."
                     Opacity="0.75"/>

          <!-- ✅ InviteCode -> VM -->
          <TextBox Watermark="Invite Code / Address"
                   Margin="0,4,0,0"
                   Text="{Binding InviteCode, Mode=TwoWay}"/>

          <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Spacing="6" Margin="0,0,6,0">
              <TextBlock Text="Username" Opacity="0.75"/>
              <!-- (noch nicht verdrahtet; kommt später in Registry/Profile) -->
              <TextBox Watermark="username"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="6" Margin="6,0,0,0">
              <TextBlock Text="Device ID" Opacity="0.75"/>
              <!-- (noch nicht verdrahtet; DeviceId wird aktuell automatisch gesetzt) -->
              <TextBox Watermark="clientname (devbox-1)"/>
            </StackPanel>
          </Grid>

          <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- ✅ Join -> EnrollCommand -->
            <Button Content="Join"
                    MinWidth="120"
                    Command="{Binding EnrollCommand}"/>

            <!-- ✅ Status testen -->
            <Button Content="Refresh Status"
                    MinWidth="140"
                    Command="{Binding RefreshStatusCommand}"/>

            <TextBlock Text="Client key is generated automatically after GitHub auth."
                       Opacity="0.55"
                       VerticalAlignment="Center"/>
          </StackPanel>

          <!-- ✅ StatusText sichtbar -->
          <TextBlock Text="{Binding StatusText}"
                     Opacity="0.85"/>

        </StackPanel>
      </Border>

      <!-- HOST (right) -->
      <Border Grid.Column="1"
              Margin="8,0,0,0"
              Background="#1b1e23"
              CornerRadius="10"
              Padding="16">
        <StackPanel Spacing="12">

          <TextBlock Text="Host Network"
                     FontSize="18"
                     FontWeight="Bold"/>

          <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Spacing="6" Margin="0,0,6,0">
              <TextBlock Text="Network Name" Opacity="0.75"/>
              <TextBox Watermark="networkname"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="6" Margin="6,0,0,0">
              <TextBlock Text="Server Endpoint" Opacity="0.75"/>
              <TextBox Watermark="your.static.ip:51820"/>
            </StackPanel>
          </Grid>

          <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Spacing="6" Margin="0,0,6,0">
              <TextBlock Text="WG Subnet" Opacity="0.75"/>
              <TextBox Watermark="10.77.0.0/16"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="6" Margin="6,0,0,0">
              <TextBlock Text="Server IP" Opacity="0.75"/>
              <TextBox Watermark="10.77.0.10"/>
            </StackPanel>
          </Grid>

          <Grid ColumnDefinitions="*,*">
            <StackPanel Grid.Column="0" Spacing="6" Margin="0,0,6,0">
              <TextBlock Text="DNS (optional)" Opacity="0.75"/>
              <TextBox Watermark="1.1.1.1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="6" Margin="6,0,0,0">
              <TextBlock Text="ENV Settings" Opacity="0.75"/>
              <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="Auto (recommended)"/>
                <ComboBoxItem Content="Advanced"/>
              </ComboBox>
            </StackPanel>
          </Grid>

          <!-- ✅ Admin Invite-Flow ist bereits implementiert -> hier direkt testbar -->
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBox Width="200"
                     Watermark="invite label"
                     Text="{Binding NewInviteLabel, Mode=TwoWay}"/>

            <Button Content="Create Invite"
                    MinWidth="140"
                    Command="{Binding CreateInviteCommand}"/>

            <TextBox Width="220"
                     Watermark="invite code"
                     IsReadOnly="True"
                     Text="{Binding CreatedInviteCode}"/>
          </StackPanel>

          <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- Host ist noch nicht implementiert -->
            <Button Content="Host"
                    MinWidth="120"
                    IsEnabled="False"/>

            <Button Content="Preview ENV"
                    IsEnabled="False"/>
          </StackPanel>

        </StackPanel>
      </Border>

    </Grid>

    <!-- ========================= -->
    <!-- SECTION TITLES             -->
    <!-- ========================= -->
    <Grid Grid.Row="1"
          ColumnDefinitions="*,*"
          Margin="16,16,16,0">

      <TextBlock Grid.Column="0"
                 Text="Connected Networks"
                 FontSize="16"
                 FontWeight="Bold"
                 Margin="8,0,0,0"/>

      <TextBlock Grid.Column="1"
                 Text="Hosted Networks"
                 FontSize="16"
                 FontWeight="Bold"
                 Margin="8,0,0,0"/>
    </Grid>

    <!-- ========================= -->
    <!-- MIDDLE: LISTS              -->
    <!-- ========================= -->
    <Grid Grid.Row="2"
          ColumnDefinitions="*,*"
          Margin="16,10,16,0">

      <!-- CONNECTED NETWORKS (left) -->
      <Border Grid.Column="0"
              Margin="0,0,8,0"
              Background="#1b1e23"
              CornerRadius="10"
              Padding="12">

        <StackPanel Spacing="10">

          <TextBox Watermark="Search connected networks…"/>

          <!-- Placeholder list (kommt später aus RegistryService.ConnectedNetworks) -->
          <ItemsControl>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="#252932"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,6,0,0">
                  <Grid ColumnDefinitions="*,Auto,Auto,Auto"
                        RowDefinitions="Auto,Auto">
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="MyTeamNet"
                               FontSize="15"
                               FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="● Online"
                               Foreground="LightGreen"
                               Margin="12,0,0,0"/>

                    <Button Grid.Row="0" Grid.Column="2"
                            Content="Details"
                            Margin="12,0,0,0"/>
                    <Button Grid.Row="0" Grid.Column="3"
                            Content="Disconnect"
                            Margin="8,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Last seen: just now • Overlay: 10.77.0.23"
                               Opacity="0.65"
                               Margin="0,4,0,0"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

        </StackPanel>

      </Border>

      <!-- HOSTED NETWORKS (right) -->
      <Border Grid.Column="1"
              Margin="8,0,0,0"
              Background="#1b1e23"
              CornerRadius="10"
              Padding="12">

        <StackPanel Spacing="10">

          <TextBox Watermark="Search hosted networks…"/>

          <!-- Placeholder list -->
          <ItemsControl>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="#252932"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,6,0,0">
                  <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto"
                        RowDefinitions="Auto,Auto">

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="MyTeamNet"
                               FontSize="15"
                               FontWeight="SemiBold"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="● Online"
                               Foreground="LightGreen"
                               Margin="12,0,0,0"/>

                    <Button Grid.Row="0" Grid.Column="2"
                            Content="Settings"
                            Margin="12,0,0,0"/>

                    <Button Grid.Row="0" Grid.Column="3"
                            Content="Create Invite"
                            Margin="8,0,0,0"/>

                    <Button Grid.Row="0" Grid.Column="4"
                            Content="View Connections"
                            Margin="8,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Peers: 4 connected • Subnet: 10.77.0.0/16"
                               Opacity="0.65"
                               Margin="0,4,0,0"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

        </StackPanel>

      </Border>

    </Grid>

    <!-- ========================= -->
    <!-- BOTTOM: VIEWPANEL          -->
    <!-- ========================= -->
    <Border Grid.Row="3"
            Margin="16,16,16,16"
            Background="#1b1e23"
            CornerRadius="10"
            Padding="14">

      <Grid RowDefinitions="Auto,*"
            ColumnDefinitions="*,Auto">

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="View Panel"
                   FontSize="16"
                   FontWeight="Bold"/>

        <!-- ✅ Admin Peers laden (sichtbarer Test-Button) -->
        <Button Grid.Row="0" Grid.Column="1"
                Content="Refresh Peers"
                Command="{Binding RefreshPeersCommand}"/>

        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Background="#252932"
                CornerRadius="8"
                Padding="12"
                Margin="0,10,0,0">

          <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">

            <!-- ✅ Log-Ausgabe aus VM -->
            <TextBlock Text="Log"
                       FontWeight="Bold"
                       Opacity="0.85"/>

            <TextBox Grid.Row="1"
                     Text="{Binding Log}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     MinHeight="90"
                     Background="#1b1e23"
                     Margin="0,8,0,0"/>

            <!-- ✅ Peers Liste (nur sinnvoll wenn Admin/Owner) -->
            <ItemsControl Grid.Row="2"
                          Margin="0,10,0,0"
                          ItemsSource="{Binding Peers}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Background="#1b1e23"
                          CornerRadius="8"
                          Padding="10"
                          Margin="0,6,0,0">
                    <StackPanel>
                      <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                      <TextBlock Text="{Binding PeerId}" Opacity="0.7"/>
                      <TextBlock Text="{Binding Address}" Opacity="0.7"/>
                    </StackPanel>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>

          </Grid>

        </Border>

      </Grid>

    </Border>

  </Grid>

</UserControl>
