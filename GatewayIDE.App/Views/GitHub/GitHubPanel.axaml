<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GatewayIDE.App.Views.GitHub.GitHubPanel">

  <UserControl.Styles>

    <!-- Typography -->
    <Style Selector="TextBlock.h1">
      <Setter Property="Foreground" Value="#eaeaea"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.h2">
      <Setter Property="Foreground" Value="#eaeaea"/>
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.muted">
      <Setter Property="Foreground" Value="#9a9a9a"/>
      <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Flat button -->
    <Style Selector="Button.flat">
      <Setter Property="Background" Value="#141414"/>
      <Setter Property="Foreground" Value="#eaeaea"/>
      <Setter Property="BorderBrush" Value="#2a2a2a"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Padding" Value="12,7"/>
    </Style>
    <Style Selector="Button.flat:pointerover">
      <Setter Property="Background" Value="#1b1b1b"/>
    </Style>

    <!-- Divider -->
    <Style Selector="Border.div">
      <Setter Property="Background" Value="#2a2a2a"/>
    </Style>

    <!-- Header strip -->
    <Style Selector="Border.header">
      <Setter Property="Background" Value="#0f0f0f"/>
      <Setter Property="BorderBrush" Value="#2a2a2a"/>
      <Setter Property="BorderThickness" Value="0,0,0,1"/>
      <Setter Property="Padding" Value="12,10"/>
    </Style>

    <!-- Pane (content area) -->
    <Style Selector="Border.pane">
      <Setter Property="Background" Value="#0f0f0f"/>
      <Setter Property="Padding" Value="12,10"/>
    </Style>

    <!-- Small tab buttons (Changes/History) -->
    <Style Selector="Button.tab">
      <Setter Property="Background" Value="#0f0f0f"/>
      <Setter Property="Foreground" Value="#cfcfcf"/>
      <Setter Property="BorderBrush" Value="#2a2a2a"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="0"/>
      <Setter Property="Padding" Value="12,8"/>
    </Style>
    <Style Selector="Button.tab:pointerover">
      <Setter Property="Background" Value="#141414"/>
    </Style>

  </UserControl.Styles>

  <!-- ROOT: edge-to-edge -->
  <Grid Background="#0f0f0f"
        RowDefinitions="Auto,*,Auto">

    <!-- ========================= -->
    <!-- HEADER (Row 0)            -->
    <!-- ========================= -->
    <Border Grid.Row="0" Classes="header">
      <Grid ColumnDefinitions="Auto,12,Auto,12,Auto,12,*,12,Auto">

        <!-- Title -->
        <TextBlock Classes="h1" Text="GitHub" VerticalAlignment="Center"/>

        <!-- Login -->
        <Button Grid.Column="2" Classes="flat" Content="Login" HorizontalAlignment="Left"/>

        <!-- Repo -->
        <StackPanel Grid.Column="4" Spacing="2">
          <TextBlock Classes="muted" Text="Current Repo"/>
          <TextBlock Classes="h2" Text="(none)"/>
        </StackPanel>

        <!-- Branch -->
        <StackPanel Grid.Column="6" Spacing="2">
          <TextBlock Classes="muted" Text="Current Branch"/>
          <TextBlock Classes="h2" Text="(none)"/>
        </StackPanel>

        <!-- Fetch -->
        <Button Grid.Column="8" Classes="flat" Content="Fetch Origin" HorizontalAlignment="Right"/>

      </Grid>
    </Border>

    <!-- ========================= -->
    <!-- CONTENT (Row 1)           -->
    <!-- 3 areas: left / mid / right -->
    <!-- ========================= -->
    <Grid Grid.Row="1"
          ColumnDefinitions="260,1,360,1,*"
          RowDefinitions="Auto,1,*">

      <!-- Left: Tabs (Changes/History) -->
      <Border Grid.Row="0" Grid.Column="0" Classes="pane" Padding="12,10">
        <Grid ColumnDefinitions="*,*" >
          <Button Grid.Column="0" Classes="tab" Content="Changes"/>
          <Button Grid.Column="1" Classes="tab" Content="History"/>
        </Grid>
      </Border>

      <!-- Mid: header -->
      <Border Grid.Row="0" Grid.Column="2" Classes="pane">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Classes="h2" Text="Changed files" VerticalAlignment="Center"/>
          <TextBlock Grid.Column="1" Classes="muted" Text="(0)" VerticalAlignment="Center"/>
        </Grid>
      </Border>

      <!-- Right: header -->
      <Border Grid.Row="0" Grid.Column="4" Classes="pane">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Classes="h2" Text="Preview" VerticalAlignment="Center"/>
          <Button Grid.Column="1" Classes="flat" Content="âš™" Width="38" Padding="0"/>
        </Grid>
      </Border>

      <!-- Divider row under headers -->
      <Border Grid.Row="1" Grid.ColumnSpan="5" Classes="div"/>

      <!-- Left: list placeholder -->
      <Border Grid.Row="2" Grid.Column="0" Classes="pane">
        <TextBlock Classes="muted" Text="(commits / changes list placeholder)"/>
      </Border>

      <!-- Vertical dividers -->
      <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Classes="div"/>
      <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="3" Classes="div"/>

      <!-- Mid: files placeholder -->
      <Border Grid.Row="2" Grid.Column="2" Classes="pane">
        <TextBlock Classes="muted" Text="(changed files list placeholder)"/>
      </Border>

      <!-- Right: diff/preview placeholder -->
      <Border Grid.Row="2" Grid.Column="4" Classes="pane">
        <TextBlock Classes="muted" Text="(diff / preview placeholder)"/>
      </Border>

    </Grid>

    <!-- ========================= -->
    <!-- FOOTER (Row 2) optional   -->
    <!-- ========================= -->
    <Border Grid.Row="2"
            Background="#0f0f0f"
            BorderBrush="#2a2a2a"
            BorderThickness="0,1,0,0"
            Padding="12,8">
      <TextBlock Classes="muted" Text=""/>
    </Border>

  </Grid>
</UserControl>
