<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:GatewayIDE.App.Views"
             xmlns:dash="clr-namespace:GatewayIDE.App.Views.Dashboard"
             xmlns:expl="clr-namespace:GatewayIDE.App.Views.Explorer"
             xmlns:eng="clr-namespace:GatewayIDE.App.Views.Engines"
             xmlns:gh="clr-namespace:GatewayIDE.App.Views.GitHub"
             xmlns:ki="clr-namespace:GatewayIDE.App.Views.KiSystem"
             xmlns:dock="clr-namespace:GatewayIDE.App.Views.Docker"
             xmlns:net="clr-namespace:GatewayIDE.App.Views.Network"
             xmlns:set="clr-namespace:GatewayIDE.App.Views.Settings"
             x:Class="GatewayIDE.App.Views.Layout">

  <Grid Background="#0f0f0f"
        ColumnDefinitions="56,*"
        RowDefinitions="*,Auto">

    <!-- LeftRail -->
    <views:LeftRail Grid.Column="0"/>

    <!-- WORKSPACE (genau EIN Slot, volle HÃ¶he) -->
    <Grid Grid.Column="1" Margin="0">

      <!-- Explorer -->
      <expl:ExplorerPanel
        DataContext="{Binding Explorer}"
        IsVisible="{Binding Layout.IsExplorer}"/>

      <!-- Dashboard -->
      <dash:DashboardPanel
        DataContext="{Binding Dashboard}"
        IsVisible="{Binding Layout.IsDashboard}"/>

      <!-- Engines -->
      <eng:EnginesPanel
        DataContext="{Binding Engines}"
        IsVisible="{Binding Layout.IsEngines}"/>

      <!-- GitHub -->
      <gh:GitHubPanel
        DataContext="{Binding GitHub}"
        IsVisible="{Binding Layout.IsGitHub}"/>

      <!-- KI-System -->
      <ki:KiSystemPanel
        DataContext="{Binding KiSystem}"
        IsVisible="{Binding Layout.IsKiSystem}"/>

      <!-- Docker -->
      <dock:DockerPanel
        DataContext="{Binding Docker}"
        IsVisible="{Binding Layout.IsDocker}"/>

      <!-- Network -->
      <net:NetworkPanel
        DataContext="{Binding Network}"
        IsVisible="{Binding Layout.IsNetwork}"/>

      <!-- Settings -->
      <set:SettingsPanel
        DataContext="{Binding Settings}"
        IsVisible="{Binding Layout.IsSettings}"/>


    </Grid>

    <!-- Statusbar -->
    <Border Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="#111"
            BorderBrush="#222"
            BorderThickness="1,1,0,0"
            Padding="8">
      <TextBlock Text="Status: isolation"
                 Foreground="#aaaaaa"/>
    </Border>

  </Grid>
</UserControl>
