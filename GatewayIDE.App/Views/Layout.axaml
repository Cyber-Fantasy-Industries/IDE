<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:GatewayIDE.App.Views"
             xmlns:dash="clr-namespace:GatewayIDE.App.Views.Dashboard"
             xmlns:expl="clr-namespace:GatewayIDE.App.Views.Explorer"
             xmlns:eng="clr-namespace:GatewayIDE.App.Views.Engines"
             xmlns:gh="clr-namespace:GatewayIDE.App.Views.GitHub"
             xmlns:ki="clr-namespace:GatewayIDE.App.Views.KiSystem"
             xmlns:dock="clr-namespace:GatewayIDE.App.Views.Docker"
             xmlns:net="clr-namespace:GatewayIDE.App.Views.Network"
             xmlns:set="clr-namespace:GatewayIDE.App.Views.Settings"
             x:Class="GatewayIDE.App.Views.Layout">

  <Grid Background="#0f0f0f"
        ColumnDefinitions="56,*"
        RowDefinitions="*,Auto">

    <!-- LeftRail -->
    <views:LeftRail Grid.Column="0"/>

    <!-- WORKSPACE -->
    <Grid Grid.Column="1" Margin="0">

      <!-- Explorer -->
      <Border IsVisible="{Binding Layout.IsExplorer}">
        <expl:ExplorerPanel DataContext="{Binding Explorer}"/>
      </Border>

      <!-- Dashboard -->
      <Border IsVisible="{Binding Layout.IsDashboard}">
        <dash:DashboardPanel DataContext="{Binding Dashboard}"/>
      </Border>

      <!-- Engines -->
      <Border IsVisible="{Binding Layout.IsEngines}">
        <eng:EnginesPanel DataContext="{Binding Engines}"/>
      </Border>

      <!-- GitHub -->
      <Border IsVisible="{Binding Layout.IsGitHub}">
        <gh:GitHubPanel DataContext="{Binding GitHub}"/>
      </Border>

      <!-- KI-System -->
      <Border IsVisible="{Binding Layout.IsKiSystem}">
        <ki:KiSystemPanel DataContext="{Binding KiSystem}"/>
      </Border>

      <!-- Docker -->
      <Border IsVisible="{Binding Layout.IsDocker}">
        <dock:DockerPanel DataContext="{Binding Docker}"/>
      </Border>

      <!-- Network -->
      <Border IsVisible="{Binding Layout.IsNetwork}">
        <net:NetworkPanel DataContext="{Binding Network}"/>
      </Border>

      <!-- Settings -->
      <Border IsVisible="{Binding Layout.IsSettings}">
        <set:SettingsPanel DataContext="{Binding Settings}"/>
      </Border>

    </Grid>

    <!-- Statusbar -->
    <Border Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="#111"
            BorderBrush="#222"
            BorderThickness="1,1,0,0"
            Padding="8">
      <TextBlock Text="Status: isolation"
                 Foreground="#aaaaaa"/>
    </Border>

  </Grid>
</UserControl>
