<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:GatewayIDE.App.Views"
             x:Class="GatewayIDE.App.Views.Layout">

  <!-- Isolation Layout: nur LeftRail + Platzhalter -->
  <Grid Background="#0f0f0f"
        ColumnDefinitions="56,*"
        RowDefinitions="*,Auto">

    <!-- LeftRail (muss in csproj aktiviert sein: Views\LeftRail.axaml) -->
    <views:LeftRail Grid.Column="0"/>

    <!-- Workspace placeholder -->
    <Border Grid.Column="1"
            Margin="12"
            BorderBrush="#333"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12">

      <StackPanel Spacing="8">
        <TextBlock Text="GatewayIDE – Isolation Mode"
                   Foreground="#d8d8d8"
                   FontSize="16"
                   FontWeight="SemiBold"/>

        <TextBlock Foreground="#aaaaaa"
                   TextWrapping="Wrap">
          Panels sind aktuell deaktiviert. Aktiviere sie einzeln in GatewayIDE.App.csproj
          (AvaloniaXaml Include=...) und ersetze danach Layout.axaml wieder durch die volle Version.
        </TextBlock>

        <TextBlock Foreground="#888888"
                   TextWrapping="Wrap">
          Tipp: Wenn du ein Panel aktivierst, musst du sowohl das Panel.axaml includen
          als auch sicherstellen, dass Layout.axaml dieses Panel überhaupt referenziert.
        </TextBlock>
      </StackPanel>
    </Border>

    <!-- Statusbar (optional, aber stabil) -->
    <Border Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="#111"
            BorderBrush="#222"
            BorderThickness="1,1,0,0"
            Padding="8">

      <TextBlock Text="Status: isolation"
                 Foreground="#aaaaaa"/>
    </Border>

  </Grid>
</UserControl>
